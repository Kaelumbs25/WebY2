<main class="container">
    <div class="row">
    <div class="col-12 col-lg-6" >
    <label for="orderForm" class="display-4">Billing Address</label>
    <form name="orderForm">
        <div class="mb-3">
            <label for="username" class="form-label">Your username</label>
            <input type="text" class="form-control" id="username" name="username" required>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Your Address</label>
            <input type="text" class="form-control" id="address" name="address" required></input>            
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Your Phone No.</label>
            <input type="text" class="form-control" id="phone" name="phone" required></input>            
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Your Email</label>
            <input type="email" class="form-control" id="email" name="email" required></input>            
        </div>
    </form>
    </div>
    <div class="col-12 col-lg-6">
    <label for="cardDetails" class="display-4">Card Details</label>
    <form action="/success" name="cardDetails">
        <div class="mb-3">
            <label for="username" class="form-label">Card Number</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="1234 5678 9012 3456" required>
        </div>
        <div class="mb-3">
            <label for="exp" class="form-label">Expiry Date</label>
            <input type="text" class="form-control" id="exp" name="exp" placeholder="10/29" required></input>            
        </div>
        <div class="mb-3">
            <label for="cvv" class="form-label">CVV</label>
            <input type="text" class="form-control" id="cvv" name="cvv" placeholder="123" required></input>            
        </div>
        <div class="mb-3">
            <label for="fullName" class="form-label">Cardholder Name</label>
            <input type="text" class="form-control" id="fullName" name="fullName" required></input>            
        </div>
        <button id="orderBtn" type="submit" class="btn btn-primary">Place Order</button>
    </form>
    </div>
    </div>
</main>
<script src="/customJS/checkout.min.js" defer></script>